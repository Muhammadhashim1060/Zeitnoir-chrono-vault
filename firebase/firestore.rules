rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /debts/{userId}/items/{debtId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /transactions/{userId}/items/{txId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /inbox/{userId}/items/{msgId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}